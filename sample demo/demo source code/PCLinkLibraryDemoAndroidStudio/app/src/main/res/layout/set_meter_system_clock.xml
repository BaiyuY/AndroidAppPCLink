<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setMeterSystemClockLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/beforeMeterSystemClockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_meter_system_clock" />

    <TextView
        android:id="@+id/beforeMeterSystemClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/afterMeterSystemClockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/after_meter_system_clock" />

    <TextView
        android:id="@+id/afterMeterSystemClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>