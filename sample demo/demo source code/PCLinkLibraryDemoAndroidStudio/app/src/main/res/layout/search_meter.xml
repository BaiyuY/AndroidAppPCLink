<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" >
      
	  <TextView
	      android:id="@+id/tv_title"
		  android:layout_width="250dp"
          android:layout_height="40dp"
          android:gravity="center"
          android:text="@string/setting_available_meter"        
          android:textSize="22sp"
          android:textColor="@android:color/white"
          android:background="@drawable/pair_block06_1" />
    
      <!-- Content -->
      <ListView
          android:id="@+id/lv_content"
          android:layout_width="wrap_content"
          android:layout_height="300dp"
          android:layout_below="@id/tv_title"
          android:layout_alignLeft="@id/tv_title"
          android:layout_alignRight="@id/tv_title"
          android:paddingLeft="8dp"
          android:paddingRight="8dp"
          android:paddingBottom="50dp"
          android:choiceMode="singleChoice"
          android:background="@drawable/pair_block04" >
      </ListView>
      
      <LinearLayout
          android:id="@+id/bottom_background"
          android:layout_width="wrap_content"
          android:layout_height="50dp"
          android:layout_alignBottom="@+id/lv_content"
          android:layout_alignLeft="@id/tv_title"
          android:layout_alignRight="@id/tv_title"
          android:padding="4dp"
          android:gravity="center"
          android:orientation="horizontal" >
          
          <Button
              android:id="@+id/btn_cancel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/cancel"
              android:textColor="@android:color/black"
              android:background="@drawable/button_pair_cancel" />
      </LinearLayout>
</RelativeLayout>